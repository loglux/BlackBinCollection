# Local config file (address, schedule, MQTT)
CONFIG_PATH=/data/blackbin_config.json

# Web UI
ENABLE_WEB_UI=true
WEB_UI_HOST=0.0.0.0
WEB_UI_PORT=5050
WEB_UI_SECRET_KEY=

# Outlook / Microsoft Graph
CLIENT_ID=your_client_id
CLIENT_SECRET=your_client_secret
TENANT_ID=common
ENABLE_OUTLOOK=true
OUTLOOK_CALENDAR_NAME=
OUTLOOK_CALENDAR_ID=

# Google Calendar (service account)
ENABLE_GOOGLE_CALENDAR=false
GOOGLE_SERVICE_ACCOUNT_FILE=google_service_account.json
GOOGLE_CALENDAR_ID=primary

# MQTT (Home Assistant)
ENABLE_MQTT=false
MQTT_BROKER=192.168.1.10
MQTT_PORT=1883
MQTT_USERNAME=blackbin
MQTT_PASSWORD=secret
MQTT_TOPIC=homeassistant/sensor/blackbin
MQTT_STATE_FORMAT=%a %d %b

# Home Assistant webhook
ENABLE_HA_WEBHOOK=false
HA_WEBHOOK_URL=http://homeassistant.local:8123/api/webhook/blackbin_collection

# REST API
ENABLE_REST_API=false
REST_API_HOST=0.0.0.0
REST_API_PORT=5000

# Selenium endpoint
SELENIUM_HOST=localhost
SELENIUM_PORT=4444
