MQTT_TOPIC=homeassistant/sensor/blackbin

# Home Assistant webhook
ENABLE_HA_WEBHOOK=false
HA_WEBHOOK_URL=http://homeassistant.local:8123/api/webhook/blackbin_collection

# REST API
ENABLE_REST_API=false
REST_API_HOST=0.0.0.0
REST_API_PORT=5000

# Selenium endpoint
SELENIUM_HOST=localhost
SELENIUM_PORT=4444
